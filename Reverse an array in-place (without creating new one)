//Reverse an array in-place (without creating new one):-
#include<iostream>
using namespace std;
int main()
{
    int array[100];
    int size,temp;
    int start = 0;

    cout<<"Enter the size of the array: ";
    cin>>size;

    if(size<=0 || size>=100)
    {
        cout<<"Invalid size !";
    }

    cout<<"Enter the elements of the array: ";
    for(int i=0 ; i<size ; i++)
    {
        cin>>array[i];
    }

    int end = size-1;
    
    while(start<end)
    {
        temp = array[start];
        array[start] = array[end];
        array[end] = temp;

        start++;
        end--;
    }

    cout<<"Reversed array: ";
    for(int j=0 ; j<size ; j++)
    {
        cout<<array[j]<<" ";
    }
}
