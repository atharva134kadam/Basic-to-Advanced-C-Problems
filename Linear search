//Linear search:-
#include<iostream>
using namespace std;
int main()
{
    int array[100];
    int size,temp=0,num;

    cout<<"Enter the size of the array: ";
    cin>>size;

    if(size<=0 || size>=100)
    {
        cout<<"Invalid size !";
    }

    cout<<"Enter the elements of the array: ";
    for(int i=0 ; i<size ; i++)
    {
        cin>>array[i];
    }

    cout<<"Enter the element to search: ";
    cin>>num;

    for(int j=0 ; j<size ; j++)
    {
        if(num == array[j])
        {
            temp = j;
        }
    }

    cout<<"Element found at index !"<<temp;
}
