//Count vowels in a string:-
#include<iostream>
using namespace std;
int main()
{
    string str;
    int len , count = 0;

    cout<<"Enter a string: ";
    getline(cin , str);

    len = str.length();

    for(int i=0 ; i<len ; i++)
    {
        if(str[i] == 'a' || str[i] == 'e' || str[i] == 'i' || str[i] == 'o' || str[i] == 'u')
        {
            count++;
        }
    }

    cout<<"String contains "<<count<<" vowels.";

}
